{
	"compilerOptions": {
		"target": "ES2022",
		"module": "CommonJS",
		"outDir": "dist",
		"rootDir": ".",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"sourceMap": true,
		"baseUrl": ".",
		"paths": {
			"@src/*": ["./src/*"],
			"@type/*": ["./types/*"],
			"@constants/*": ["./constants/*"],
			"@scripts/*": ["./scripts/*"]
		}
	},
	"include": ["src", "types"],
	"exclude": ["node_modules", "dist", "tests"]
}
